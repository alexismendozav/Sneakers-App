<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.sneakers">

    <uses-feature
            android:name="android.software.leanback"
            android:required="false"/>
    <uses-feature
            android:name="android.hardware.touchscreen"
            android:required="false"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:fullBackupContent="@xml/backup_descriptor"
            android:icon="@mipmap/ic_sneakers"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_sneakers"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".home.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".user.Registry">
        </activity>
        <activity
                android:name=".user.Session"
                android:configChanges="screenSize|orientation"
                android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".home.MainActivity">

        </activity>
        <activity android:name=".categories.CategoriesActivity"/>
        <activity android:name=".search.SearchActivity"/>
        <activity android:name=".user.UserActivity"/>
        <activity android:name=".categories.AllProductsActivity">
        </activity>
    </application>

</manifest>